<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="707.0" prefWidth="1150.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.is24am03.ColorViewController">
    <Text text="Selezionare un colore" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="redButton" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: red;"  onAction="#onClickRedButton"/>
        <Button fx:id="blueButton" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: blue;" onAction="#onClickBlueButton" />
        <Button fx:id="yellowButton" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: yellow;" onAction="#onClickYellowButton"/>
        <Button fx:id="greenButton" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #00ff00;" onAction="#onClickGreenButton"/>
    </HBox>
</VBox>
